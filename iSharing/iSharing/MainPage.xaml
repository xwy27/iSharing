<Page
    x:Class="iSharing.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iSharing"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="MainWindown" Background="DarkGray">
        <Grid.Resources>
            <Style TargetType="TextBlock" x:Key="Hint">
                <Setter Property="Width" Value="150"></Setter>
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                <Setter Property="Margin" Value="10 0 0 0"></Setter>
                <Setter Property="TextAlignment" Value="Center"></Setter>
                <Setter Property="FontSize" Value="25"></Setter>
                <Setter Property="FontWeight" Value="Bold"></Setter>
            </Style>
            
            <Style TargetType="Button" x:Key="button">
                <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
                <Setter Property="Width" Value="380"></Setter>
                <Setter Property="Background" Value="LightSkyBlue"></Setter>
            </Style>

            <Style TargetType="TextBox" x:Key="input">
                <Setter Property="Width" Value="380"></Setter>
                <Setter Property="BorderBrush" Value="Gray"></Setter>
                <Setter Property="BorderThickness" Value="0 0 0 3"></Setter>
                <Setter Property="TextWrapping" Value="NoWrap"></Setter>
                <Setter Property="FontSize" Value="25"></Setter>
            </Style>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="400"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid x:Name="LoginPage" Grid.Column="1"  Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Row="1" Grid.RowSpan="7" BorderBrush="Black" BorderThickness="3" CornerRadius="20"></Border>

            <TextBlock Grid.Row="1" Text="登陆" Style="{StaticResource Hint}"></TextBlock>

            <TextBlock Grid.Row="2"></TextBlock>
            <TextBox x:Name="LUsername" Grid.Row="3" PlaceholderText="用户名" Style="{StaticResource input}"></TextBox>

            <TextBlock Grid.Row="4"></TextBlock>
            <TextBox x:Name="LPassword" Grid.Row="5" PlaceholderText="密码" Style="{StaticResource input}"></TextBox>

            <Button Grid.Row="6" Content="登陆" Style="{StaticResource button}" FontSize="18" Click="LogIn"></Button>

            <RelativePanel Grid.Row="7">
                <TextBlock Text="没有账号?" Style="{StaticResource Hint}" FontSize="18" RelativePanel.AlignRightWithPanel="True" Margin="0 0 10 0"></TextBlock>
                <HyperlinkButton Content="注册" FontSize="18" RelativePanel.AlignRightWithPanel="True" Margin="0 -6 10 0" Click="ToSignUp"></HyperlinkButton>
            </RelativePanel>
        </Grid>

        <Grid x:Name="SignupPage" Grid.Column="1"  Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Row="1" Grid.RowSpan="13" BorderBrush="Black" BorderThickness="3" CornerRadius="20"></Border>

            <TextBlock Grid.Row="1" Text="注册" Style="{StaticResource Hint}" HorizontalAlignment="Center" TextAlignment="Center"></TextBlock>

            <TextBlock Grid.Row="2"></TextBlock>
            <TextBox x:Name="SUsername" Grid.Row="3" PlaceholderText="用户名" Style="{StaticResource input}"></TextBox>

            <TextBlock Grid.Row="4"></TextBlock>
            <TextBox x:Name="SPassword" Grid.Row="5" PlaceholderText="密码" Style="{StaticResource input}"></TextBox>

            <TextBlock Grid.Row="6"></TextBlock>
            <TextBox x:Name="SConfrimPwd" Grid.Row="7" PlaceholderText="确认密码" Style="{StaticResource input}"></TextBox>

            <TextBlock Grid.Row="8"></TextBlock>
            <TextBox x:Name="SMail" Grid.Row="9" PlaceholderText="E-mail" Style="{StaticResource input}"></TextBox>

            <TextBlock Grid.Row="10"></TextBlock>
            <TextBox x:Name="SPhone" Grid.Row="11" PlaceholderText="手机号码" Style="{StaticResource input}"></TextBox>

            <Button Grid.Row="12" Content="注册" Style="{StaticResource button}" FontSize="18" Click="SignUp"></Button>

            <RelativePanel Grid.Row="13">
                <TextBlock Text="已有账号?" Width="100" FontSize="18" RelativePanel.AlignRightWithPanel="True" Margin="0 0 30 0"></TextBlock>
                <HyperlinkButton Content="登陆" FontSize="18" RelativePanel.AlignRightWithPanel="True" Margin="0 -6 10 0" Click="ToLogin"></HyperlinkButton>
            </RelativePanel>
        </Grid>
    </Grid>
</Page>
